<UserControl x:Class="DojoManagerGui.LabeledTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DojoManagerGui"
             mc:Ignorable="d" 
             x:Name="parent">

    <DockPanel DataContext="{Binding ElementName=parent}">
        <TextBlock x:Name="theLabel" Margin="3"   Text="{Binding LabelText}"    />
        <TextBox   x:Name="theTextBox" Margin="3" Text="{Binding Value}" />
    </DockPanel>


</UserControl>
