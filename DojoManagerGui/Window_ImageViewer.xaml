<mah:MetroWindow  x:Class="DojoManagerGui.Window_ImageViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DojoManagerGui"
        mc:Ignorable="d"
        Title="ImageViewer" Height="600" Width="450"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:ViewModels="clr-namespace:DojoManagerGui.ViewModels" d:DataContext="{d:DesignInstance Type=ViewModels:VM_ImageViewer}">
    <StackPanel>
        <DockPanel>
            <Label>Path:</Label>
            <TextBlock ></TextBlock>
            <Button Command="{Binding SelectImageCommand}">Load</Button>
        </DockPanel>
        <Image Source="{Binding  ImageFilePath}"></Image>
    </StackPanel>
</mah:MetroWindow>
